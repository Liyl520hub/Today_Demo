<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal">



        <ImageButton
            android:id="@+id/phone_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ya" />

        <ImageButton
            android:id="@+id/qq_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_y" />

        <ImageButton
            android:id="@+id/weibo_login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ach" />






    </LinearLayout>

    <LinearLayout
        android:id="@+id/qqicon_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >


        <ImageButton
            android:id="@+id/qq_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_y" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/group_f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_shoucang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/shoucang"
                    android:gravity="center"
                    android:textColor="?attr/Mycolor"
                    android:text="收藏" />

                <RadioButton
                    android:id="@+id/btn_lishi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@drawable/history_profile_press"
                    android:gravity="center"
                    android:textColor="?attr/Mycolor"
                    android:text="历史" />


                <RadioButton
                    android:id="@+id/btn_niaght"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:button="@null"
                    android:checked="true"
                    android:textColor="?attr/Mycolor"
                    android:drawableTop="@drawable/day_night"

                    />

            </RadioGroup>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F0F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="消息通知"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F0F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="头条商城"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="京东特供"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F0F0F0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="我要爆料"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="用户反馈"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="系统设置"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>